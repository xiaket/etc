if [ "x$ARCH" = "xDarwin" ]; then
	# GNU rules.
	alias rm='grm'
	alias head='ghead'
	alias tail='gtail'
	alias sed='gsed'
	alias awk='gawk'

	alias retouch='sudo pkill TouchBarServer'
	alias mtr='sudo /usr/local/sbin/mtr'
	alias typora='open -a Typora '
fi

